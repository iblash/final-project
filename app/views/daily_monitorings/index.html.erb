<%- model_class = DailyMonitoring -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @daily_monitorings.each do |daily_monitoring| %>
      <tr>
        <td><%= link_to daily_monitoring.id, daily_monitoring_path(daily_monitoring) %></td>
        <td><%= daily_monitoring.title %></td>
        <td><%= daily_monitoring.description %></td>
        <td><%=l daily_monitoring.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      daily_monitoring_path(daily_monitoring), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_daily_monitoring_path(daily_monitoring), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      daily_monitoring_path(daily_monitoring),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_daily_monitoring_path,
            :class => 'btn btn-primary' %>
