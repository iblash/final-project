<%= simple_form_for @daily_monitoring, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%#= error_span(@daily_monitoring[:title]) %>
  <%= f.input :description %>
  <%#= error_span(@daily_monitoring[:description]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
